<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    tools:context=".activities.User_register_details">


    <TextView
        android:id="@+id/driverText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:text="Required Details"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/driverText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="29dp"
        android:background="@android:color/darker_gray" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/driverText"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="76dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_edittext"
        android:hint="First Name"
        android:padding="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Last Name"
        android:id="@+id/lastName"
        android:layout_marginLeft="30dp"
        android:background="@drawable/bg_edittext"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/firstName"
        android:padding="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Contact"
        android:inputType="number"
        android:id="@+id/contact"
        android:layout_marginLeft="30dp"
        android:background="@drawable/bg_edittext"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/lastName"
        android:padding="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Address"
        android:id="@+id/address"
        android:layout_marginLeft="30dp"
        android:background="@drawable/bg_edittext"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/contact"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/dob"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/contact"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="134dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_edittext"
        android:hint="dob"
        android:padding="10dp" />


    <Spinner
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_alignBottom="@+id/dob"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="66dp"
        android:background="@drawable/bg_edittext"
        android:padding="10dp" />

    <Spinner
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dob"
        android:layout_alignBottom="@+id/adddetailsbtn"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/bg_edittext"
        android:padding="10dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/adddetailsbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="210dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_border"
        android:shadowRadius="@integer/material_motion_duration_medium_2"
        android:text="Sign in"
        android:textSize="35sp"
        android:textStyle="bold" />
</RelativeLayout>